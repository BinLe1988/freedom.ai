<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>仪表板 - Freedom.AI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar {
            min-height: 100vh;
            background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
            color: white;
        }
        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            border-radius: 8px;
            margin: 2px 0;
            transition: all 0.3s;
        }
        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            color: white;
            background-color: rgba(255, 255, 255, 0.1);
        }
        .main-content {
            background-color: #f8f9fa;
            min-height: 100vh;
        }
        .stat-card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }
        .stat-card:hover {
            transform: translateY(-2px);
        }
        .freedom-score {
            font-size: 3rem;
            font-weight: bold;
        }
        .insight-card {
            border-left: 4px solid #667eea;
            background: linear-gradient(90deg, rgba(102, 126, 234, 0.1) 0%, rgba(255, 255, 255, 0) 100%);
        }
        .activity-item {
            border-bottom: 1px solid #eee;
            padding: 12px 0;
        }
        .activity-item:last-child {
            border-bottom: none;
        }
        .progress-ring {
            width: 120px;
            height: 120px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- 侧边栏 -->
            <div class="col-md-3 col-lg-2 sidebar p-3">
                <div class="text-center mb-4">
                    <h4><i class="fas fa-rocket me-2"></i>Freedom.AI</h4>
                    <p class="small mb-0">欢迎回来，{{ user_stats.username }}！</p>
                </div>
                
                <nav class="nav flex-column">
                    <a class="nav-link active" href="/dashboard">
                        <i class="fas fa-tachometer-alt me-2"></i>仪表板
                    </a>
                    <a class="nav-link" href="/assessment">
                        <i class="fas fa-chart-line me-2"></i>自由度评估
                    </a>
                    <a class="nav-link" href="/opportunities">
                        <i class="fas fa-search-dollar me-2"></i>机会探索
                    </a>
                    <a class="nav-link" href="/learning">
                        <i class="fas fa-graduation-cap me-2"></i>学习规划
                    </a>
                    <a class="nav-link" href="/profile">
                        <i class="fas fa-user me-2"></i>个人档案
                    </a>
                    <hr class="my-3">
                    <a class="nav-link" href="/logout">
                        <i class="fas fa-sign-out-alt me-2"></i>退出登录
                    </a>
                </nav>
            </div>
            
            <!-- 主内容区 -->
            <div class="col-md-9 col-lg-10 main-content p-4">
                <!-- 顶部统计卡片 -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card stat-card text-center p-3">
                            <div class="card-body">
                                <i class="fas fa-chart-pie fa-2x text-primary mb-2"></i>
                                <h6 class="card-title">自由度评分</h6>
                                <div class="freedom-score text-primary" id="freedomScore">--</div>
                                <small class="text-muted">上次评估</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stat-card text-center p-3">
                            <div class="card-body">
                                <i class="fas fa-eye fa-2x text-success mb-2"></i>
                                <h6 class="card-title">机会浏览</h6>
                                <div class="h3 text-success">{{ user_stats.behavior_analysis.feature_usage.feature_counts.opportunity_view or 0 }}</div>
                                <small class="text-muted">本月</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stat-card text-center p-3">
                            <div class="card-body">
                                <i class="fas fa-book fa-2x text-warning mb-2"></i>
                                <h6 class="card-title">学习计划</h6>
                                <div class="h3 text-warning">{{ user_stats.behavior_analysis.learning_patterns.total_learning_plans or 0 }}</div>
                                <small class="text-muted">已制定</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card stat-card text-center p-3">
                            <div class="card-body">
                                <i class="fas fa-fire fa-2x text-danger mb-2"></i>
                                <h6 class="card-title">活跃度</h6>
                                <div class="h3 text-danger">{{ user_stats.recent_actions_7d }}</div>
                                <small class="text-muted">7天内行为</small>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <!-- 个性化洞察 -->
                    <div class="col-lg-8">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="fas fa-lightbulb me-2"></i>个性化洞察</h5>
                            </div>
                            <div class="card-body">
                                {% if insights.personalized_recommendations %}
                                    {% for recommendation in insights.personalized_recommendations %}
                                    <div class="insight-card card mb-3">
                                        <div class="card-body">
                                            <i class="fas fa-star text-warning me-2"></i>
                                            {{ recommendation }}
                                        </div>
                                    </div>
                                    {% endfor %}
                                {% else %}
                                    <div class="text-center text-muted py-4">
                                        <i class="fas fa-chart-line fa-3x mb-3"></i>
                                        <p>完成更多操作以获得个性化洞察</p>
                                        <a href="/assessment" class="btn btn-primary">开始评估</a>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        
                        <!-- 行为分析图表 -->
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>使用情况分析</h5>
                            </div>
                            <div class="card-body">
                                <canvas id="activityChart" width="400" height="200"></canvas>
                            </div>
                        </div>
                    </div>
                    
                    <!-- 右侧面板 -->
                    <div class="col-lg-4">
                        <!-- 下一步行动 -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-tasks me-2"></i>建议行动</h6>
                            </div>
                            <div class="card-body">
                                {% if insights.next_actions %}
                                    {% for action in insights.next_actions %}
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-arrow-right text-primary me-2"></i>
                                        <span class="small">{{ action }}</span>
                                    </div>
                                    {% endfor %}
                                {% else %}
                                    <p class="text-muted small mb-0">暂无建议行动</p>
                                {% endif %}
                            </div>
                        </div>
                        
                        <!-- 最近活动 -->
                        <div class="card">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="fas fa-history me-2"></i>最近活动</h6>
                            </div>
                            <div class="card-body">
                                <div id="recentActivities">
                                    <div class="text-center text-muted">
                                        <i class="fas fa-spinner fa-spin"></i>
                                        <p class="small mt-2">加载中...</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
        // 页面加载完成后初始化
        document.addEventListener('DOMContentLoaded', function() {
            loadUserAnalytics();
            initActivityChart();
        });
        
        // 加载用户分析数据
        async function loadUserAnalytics() {
            try {
                const response = await fetch('/api/user_analytics');
                const data = await response.json();
                
                if (data.success) {
                    updateDashboard(data);
                }
            } catch (error) {
                console.error('加载用户分析数据失败:', error);
            }
        }
        
        // 更新仪表板数据
        function updateDashboard(data) {
            const behaviorAnalysis = data.behavior_analysis;
            const journey = data.recent_journey;
            
            // 更新自由度评分 (如果有的话)
            // 这里可以从用户档案或最近评估中获取
            
            // 更新最近活动
            updateRecentActivities(journey.journey || []);
            
            // 更新活动图表
            updateActivityChart(behaviorAnalysis);
        }
        
        // 更新最近活动列表
        function updateRecentActivities(activities) {
            const container = document.getElementById('recentActivities');
            
            if (!activities || activities.length === 0) {
                container.innerHTML = '<p class="text-muted small mb-0">暂无最近活动</p>';
                return;
            }
            
            let html = '';
            activities.slice(0, 5).forEach(activity => {
                const time = new Date(activity.timestamp).toLocaleString('zh-CN', {
                    month: 'short',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });
                
                const actionIcons = {
                    'assessment': 'chart-line',
                    'opportunity_view': 'eye',
                    'learning_plan': 'graduation-cap',
                    'search': 'search',
                    'login': 'sign-in-alt'
                };
                
                const icon = actionIcons[activity.action_type] || 'circle';
                const actionName = getActionName(activity.action_type);
                
                html += `
                    <div class="activity-item">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-${icon} text-primary me-2"></i>
                            <div class="flex-grow-1">
                                <div class="small fw-bold">${actionName}</div>
                                <div class="text-muted" style="font-size: 0.75rem;">${time}</div>
                            </div>
                        </div>
                    </div>
                `;
            });
            
            container.innerHTML = html;
        }
        
        // 获取行为名称
        function getActionName(actionType) {
            const names = {
                'assessment': '完成自由度评估',
                'opportunity_view': '浏览机会',
                'learning_plan': '制定学习计划',
                'search': '搜索内容',
                'login': '登录系统',
                'preference_update': '更新偏好'
            };
            return names[actionType] || '未知操作';
        }
        
        // 初始化活动图表
        function initActivityChart() {
            const ctx = document.getElementById('activityChart').getContext('2d');
            
            window.activityChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['评估', '机会浏览', '学习规划', '搜索', '其他'],
                    datasets: [{
                        data: [0, 0, 0, 0, 0],
                        backgroundColor: [
                            '#667eea',
                            '#28a745',
                            '#ffc107',
                            '#17a2b8',
                            '#6c757d'
                        ],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        }
        
        // 更新活动图表
        function updateActivityChart(behaviorAnalysis) {
            if (!behaviorAnalysis || !behaviorAnalysis.feature_usage) {
                return;
            }
            
            const featureCounts = behaviorAnalysis.feature_usage.feature_counts || {};
            
            const data = [
                featureCounts.assessment || 0,
                featureCounts.opportunity_view || 0,
                featureCounts.learning_plan || 0,
                featureCounts.search || 0,
                Math.max(0, (behaviorAnalysis.feature_usage.total_actions || 0) - 
                    (featureCounts.assessment || 0) - 
                    (featureCounts.opportunity_view || 0) - 
                    (featureCounts.learning_plan || 0) - 
                    (featureCounts.search || 0))
            ];
            
            if (window.activityChart) {
                window.activityChart.data.datasets[0].data = data;
                window.activityChart.update();
            }
        }
        
        // 定期刷新数据
        setInterval(loadUserAnalytics, 300000); // 每5分钟刷新一次
        
        // 添加快捷操作
        function quickAssessment() {
            window.location.href = '/assessment';
        }
        
        function quickOpportunities() {
            window.location.href = '/opportunities';
        }
        
        function quickLearning() {
            window.location.href = '/learning';
        }
    </script>
</body>
</html>
